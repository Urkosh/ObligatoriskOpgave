<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="poulsen.obligatoriskopgvae.RecoverPassword">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recoverPasswordUserName"
        android:layout_marginTop="384dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint_put_name"
        android:textColor="@color/login_black"
        android:textColorHint="@color/login_black" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retrieve_password"
        android:id="@+id/recoverPasswordButton"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/recoverPasswordUserName"
        android:layout_centerHorizontal="true"
        android:onClick="recoverPassword"/>
</RelativeLayout>
